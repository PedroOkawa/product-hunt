<resources>

    <!-- BASE -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <!-- AVATAR -->

    <style name="Avatar">
        <item name="android:layout_width">@dimen/avatar_style_size</item>
        <item name="android:layout_height">@dimen/avatar_style_size</item>
        <item name="android:layout_margin">@dimen/avatar_style_margin</item>
    </style>

    <!-- CARD -->

    <style name="CardText">
        <item name="android:textStyle">bold</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:padding">@dimen/card_style_text_padding</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CardPreviewText" parent="CardText">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CardTitle" parent="CardPreviewText">
        <item name="android:textSize">@dimen/title</item>
    </style>

    <style name="CardInfoText" parent="CardText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/title</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <!-- DETAILS -->

    <style name="DetailsBody">
        <item name="android:textSize">@dimen/body</item>
        <item name="android:padding">@dimen/details_style_text_padding</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="PostDetailsBody" parent="DetailsBody">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DetailsTitle" parent="DetailsBody">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/title</item>
    </style>

    <style name="DetailsCommentBody" parent="DetailsBody">
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="DetailsCommentUsername" parent="DetailsBody">
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
