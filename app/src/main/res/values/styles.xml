<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CardText">
        <item name="android:textStyle">bold</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:padding">@dimen/card_style_text_padding</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CardPreviewText" parent="CardText">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CardTitle" parent="CardPreviewText">
        <item name="android:textSize">@dimen/title</item>
    </style>

    <style name="CardBody" parent="CardPreviewText">
        <item name="android:textSize">@dimen/body</item>
    </style>

    <style name="CardInfoText" parent="CardText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/title</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

</resources>
